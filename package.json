{
  "name": "templyte",
  "version": "2.0.0",
  "description": "Simple Javascript string template. Useful for simple string translations and text replacing.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prebuild": "npm run test",
    "lint": "xo !*.config.js",
    "lint:fix": "xo --fix",
    "test": "jest --config jest.config.js",
    "pretest": "xo !jest.config.js",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm unlink && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SiroDiaz/templyte.git"
  },
  "keywords": [
    "template",
    "template-engine",
    "string",
    "template",
    "javascript",
    "ts",
    "typescript",
    "node.js"
  ],
  "author": "Siro DÃ­az",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SiroDiaz/templyte/issues"
  },
  "homepage": "https://github.com/SiroDiaz/templyte#readme",
  "dependencies": {
    "escape-string-regexp": "4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "ts-jest": "^29.0.0",
    "tsd": "^0.23.0",
    "typescript": "^4.8.3",
    "xo": "^0.52.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  }
}
